FROM golang:1.24 AS build

RUN go install github.com/air-verse/air@v1.52.3

# Install buf and Go plugins
RUN go install github.com/bufbuild/buf/cmd/buf@latest && \
    go install google.golang.org/protobuf/cmd/protoc-gen-go@latest && \
    go install google.golang.org/grpc/cmd/protoc-gen-go-grpc@latest

# Set up directory structure to match local
WORKDIR /mint-flea

# Copy proto files and configuration
COPY proto /mint-flea/proto

# Initialize proto module and generate code
WORKDIR /mint-flea/proto
RUN go mod download

# Generate proto files using buf
RUN buf generate

# Copy account service files
WORKDIR /mint-flea/services/account
COPY services/account/go.mod services/account/go.sum ./

# Copy all service files before go mod download
COPY services/account/ ./

# Download dependencies and tidy
RUN go mod download && go mod tidy

CMD ["air", "-c", ".air.toml"]